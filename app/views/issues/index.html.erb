<h1>Issues</h1>

<%= form_tag("/issues/sync", method: "post") do %>
  <p>
    <%= label_tag(:username, "Username:") %>
    <input value="jbrunton" type="text" name="username" id="username">    
    
    <%= label_tag(:password, "Password:") %>
    <input type="text" name="password" id="password">
  </p>

  <%= submit_tag("Sync") %>
<% end %>

<% unless @board.nil? %>
  <h3><%= @board['name'] %></h3>
<% end %>

<table>
  <% @epics.each do |epic| %>
    <%= render epic %>
    
    <% epic.issues.each do |issue| %>
      <%= render issue %>
    <% end %>
  <% end %>
</table>
