<div class="content-full">
  <h1>Sync</h1>
  
  <%= form_tag("/sync/sync", method: "post") do %>
    <p>
      <%= label_tag(:username, "Username:") %>
      <input value="jbrunton" type="text" name="username" id="username">    
    
      <%= label_tag(:password, "Password:") %>
      <input type="text" name="password" id="password">
      
      <%= label_tag(:domain, "Domain:") %>
      <input type="text" name="domain" id="domain">

      <%= label_tag(:rapid_board_id, "Rapid Board ID:") %>
      <input type="text" name="rapid_board_id" id="rapid_board_id">

      <%= submit_tag("Sync") %>
    </p>

  <% end %>

  <% unless @board.nil? %>
    <h3><%= @board['name'] %></h3>
  <% end %>
</div>